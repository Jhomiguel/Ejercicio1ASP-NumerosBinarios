@model NumBinario
@{
    ViewData["Title"] = "Mostrar";
}


    <div class="row">
        <div class="form-group">

            <label>Numeros Introducidos en binarios (tabla):</label>
           
            <table class="table table-bordered">
              <thead>
                  <tr>
                      <th scope="col">#</th>
                      <th scope="col">Binario</th>
                  </tr>
              </thead>
                <tbody>
                    @for (int i = 0; i < Model.Numeros.Count; i++)
                    { 
                        <tr>
                            <th scope="row">@Model.Numeros[i]</th>
                            <th scope="row">@Model.NBinarios[i]</th>
                        </tr>
                    }
                </tbody>
            </table>           
        </div>
    </div>